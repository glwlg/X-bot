DINGTALK_CLIENT_SECRET=""

# Gemini API Configuration
GEMINI_BASE_URL="https://generativelanguage.googleapis.com/v1beta"
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-3-flash-preview"
